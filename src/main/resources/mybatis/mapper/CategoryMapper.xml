<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.smallbeginjava11.mapper.CategoryMapper">

    <select id="getAllCategory" resultType="Category">
        SELECT
            category_code,
            category_name,
            category_color
        FROM category;
    </select>

    <select id="selectCategory" resultType="Category" parameterType="String">
        SELECT * FROM category where category_code = #{code};
    </select>

</mapper>